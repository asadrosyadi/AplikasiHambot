<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:text="Waktu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/time_text_view"
            android:text="Baterai : " />
        <TextView
            android:id="@+id/rh_text_view"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/time_text_view"
            android:text="20" />
        <TextView
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_below="@id/time_text_view"
            android:text=" %" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rh_text_view"
            android:textColor="#000000"
            android:text="Tangki Pestisida : " />

        <TextView
            android:id="@+id/suhu_luar"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rh_text_view"
            android:text="50" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_below="@id/rh_text_view"
            android:text=" %" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@id/rh_text_view"
            android:text="Pergerakan Robot : " />

        <TextView
            android:id="@+id/suhu_dalam"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/rh_text_view"
            android:textStyle="bold"
            android:text="Bergerak" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@id/rh_text_view"
            android:text="Deteksi Hama : " />

        <TextView
            android:id="@+id/raindrop"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Ada Hama" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@id/rh_text_view"
            android:text="Jarak Hama : " />

        <TextView
            android:id="@+id/ldr"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="8" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text=" M" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@id/rh_text_view"
            android:text="Penyemprotan Hama : " />

        <TextView
            android:id="@+id/kondisijemuran"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Mati" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_below="@id/rh_text_view"
            android:text="Mode Penyemprotan Hama : " />

        <TextView
            android:id="@+id/menyala"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Manual" />

    </LinearLayout>

    </LinearLayout>
