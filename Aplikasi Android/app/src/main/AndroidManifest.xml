<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pkm.hambot" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/hambot"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/hambot"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fuzzybayes"
        android:usesCleartextTraffic="true"
        tools:targetApi="31" >
        <activity
            android:name="com.pkm.hambot.daftar"
            android:exported="false" />
        <activity
            android:name="com.pkm.hambot.historysensor"
            android:exported="false" />
        <activity
            android:name="com.pkm.hambot.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashScreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pkm.hambot.Home"
            android:exported="false" />
        <activity
            android:name="com.pkm.hambot.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.pkm.hambot.Pengaturan"
            android:exported="false" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>